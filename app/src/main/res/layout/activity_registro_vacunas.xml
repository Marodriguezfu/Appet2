<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".RegistroVacunasActivity">

    <EditText
        android:id="@+id/numberVacuna4"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="35dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:hint="Numero de dosis"
        android:textColorHint="#000000"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateVacuna4" />

    <EditText
        android:id="@+id/numberVacuna5"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:textAlignment="center"
        android:hint="Numero de dosis"
        android:textColorHint="#000000"
        android:textSize="15dp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/dateVacuna4"
        app:layout_constraintTop_toBottomOf="@+id/dateVacuna5" />

    <EditText
        android:id="@+id/numberVacuna3"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="127dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:hint="Numero de dosis"
        android:textColorHint="#000000"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateVacuna3" />

    <EditText
        android:id="@+id/numberVacuna2"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:textAlignment="center"
        android:hint="Numero de dosis"
        android:textColorHint="#000000"
        android:textSize="15dp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/dateVacuna1"
        app:layout_constraintTop_toBottomOf="@+id/dateVacuna2" />

    <EditText
        android:id="@+id/dateVacuna5"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="#828282"
        android:clickable="false"
        android:focusable="false"
        android:text="dateVacuna5"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintStart_toEndOf="@+id/dateVacuna4"
        app:layout_constraintTop_toBottomOf="@+id/dateVacuna3" />

    <EditText
        android:id="@+id/dateVacuna4"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:background="#828282"
        android:clickable="false"
        android:focusable="false"
        android:text="dateVacuna4"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateVacuna3" />

    <EditText
        android:id="@+id/dateVacuna3"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="50dp"
        android:background="#828282"
        android:clickable="false"
        android:focusable="false"
        android:text="dateVacuna3"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateVacuna1" />

    <EditText
        android:id="@+id/dateVacuna1"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:background="#828282"
        android:clickable="false"
        android:focusable="false"
        android:text="dateVacuna1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/numberVacuna1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVacunas" />

    <TextView
        android:id="@+id/textVacunas"
        android:layout_width="335dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:text="Seleccione las vacunas,la ultima fecha de aplicación y el numero de aplicaciones realizadas a su mascota"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateCumpleaños" />

    <TextView
        android:id="@+id/textCumpleañosMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:textAlignment="center"
        android:text="Fecha de nacimiento de su mascota"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dateCumpleaños"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:clickable="false"
        android:focusable="false"
        android:text="Selecciona la fecha de nacimiento"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCumpleañosMascota" />

    <EditText
        android:id="@+id/dateVacuna2"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:background="#828282"
        android:clickable="false"
        android:focusable="false"
        android:text="dateVacuna2"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintStart_toEndOf="@+id/dateVacuna1"
        app:layout_constraintTop_toBottomOf="@+id/textVacunas" />

    <EditText
        android:id="@+id/numberVacuna1"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="35dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#000000"
        android:hint="Numero de dosis"
        android:textColorHint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateVacuna1" />

    <Button
        android:id="@+id/buttonRegistrarMascota"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@color/colorAccent"
        android:text="Registrar Mascota"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>